@model application.Entity.Paciente
@{     
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Registrar Paciente</h4>

<p>@ViewBag.mensaje</p>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
