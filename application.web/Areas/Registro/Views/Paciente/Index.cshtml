                @Html.EditorFor(model => model.usu_apepaterno, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usu_apepaterno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.usu_apematerno, htmlAttributes: new { @class = "control-label col-md-2" })
