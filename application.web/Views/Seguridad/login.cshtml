@model application.Entity.Usuario
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_basico.cshtml";
}
<div>@Html.Raw(ViewBag.mensajeserver)</div>
<div class="login-box clearfix animated flipInY">
    <div class="login-logo">
        <h2>Acceso al Sistema </h2>
    </div> 
    <div class="login-form">        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group-login">
                    @Html.LabelFor(model => model.usuario, htmlAttributes: new { @class = " clslabel" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control", @autofocus="autofocus", @placeholder = "Ingresa un nombre de usuario"  }  })
                    @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "errorlist  " })

                </div>
                <div class="form-group-login">
                    @Html.LabelFor(model => model.pass, htmlAttributes: new { @class = " clslabel" })
                </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control", @placeholder = "Ingresa un password" } })
                        @Html.ValidationMessageFor(model => model.pass, "", new { @class = "errorlist  " })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=" Iniciar Session " class="btn btn-red" />
                        </div>
                    </div>
                </div>
        }
 
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }


    </div>
</div>